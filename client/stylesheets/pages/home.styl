@require '../color.styl'

.home-page
  height: 100vh

  .logo-wrapper
    width: 100vw
    padding: 30px

  .large-logo
    height: 236px
    width: 130px
    background: transparent url('/img/logo.svg') no-repeat scroll 0 0
    margin: 0
    padding: 0

  .large-logo-label
    font-size: 64px
    color: $color.white
    padding-bottom: 30px
    margin-bottom: 30px
    line-height: 1em
    border-bottom: 1px solid $color.white
    width: 100%
    text-align: center
