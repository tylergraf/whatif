@require 'color.styl'
form

  textarea
    background: $color.mediumGreen
    width: 100%
    border: none
    resize: none
    border-radius: 5px
    box-shadow: inset 0 1px 1px rgba(0,0,0,0.25)
    padding: 10px
    height: 120px
    color: $color.white
    &::-webkit-input-placeholder
      color: $color.white5

    &:-moz-placeholder  /* Firefox 18- */
      color: $color.white5

    &::-moz-placeholder   /* Firefox 19+ */
      color: $color.white5

    &:-ms-input-placeholder
      color: $color.white5

  label
    color: $color.white
    font-weight: bold
    font-size: 14px

  .form-actions
    margin-top: 20px
