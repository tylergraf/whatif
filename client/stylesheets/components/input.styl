@require '../color.styl'

.input-label
  color: $color.white

input[type=text]
  width: 100%
  height: 38px
  background: $color.mediumGreen
  border: none
  color: $color.white
  padding: 0 10px

  &::-webkit-input-placeholder
    color: rgba(255,255,255,0.6);


  &:-moz-placeholder  /* Firefox 18- */
    color: rgba(255,255,255,0.6);


  &::-moz-placeholder   /* Firefox 19+ */
    color: rgba(255,255,255,0.6);

  &:-ms-input-placeholder
    color: rgba(255,255,255,0.6);  

  &:focus
    box-shadow: none
    outline: none
